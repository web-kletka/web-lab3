<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://jakarta.ee/xml/ns/persistence http://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="PERSISTENCE">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.data.models.MyEntityModel</class>
        <properties>
            <!-- Параметры подключения -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/web_lab3_db"/>
            <property name="jakarta.persistence.jdbc.user" value="host"/>
            <property name="jakarta.persistence.jdbc.password" value="1122"/>

            <!-- Hibernate-specific параметры -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
